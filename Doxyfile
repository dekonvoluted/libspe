# Configuration file for generating documentation using doxygen
# Simply run "doxygen Doxyfile" in a terminal to generate it

# Name of the project
PROJECT_NAME = "libSPE"

# Version number
PROJECT_NUMBER = "2.0"

# Link to source code
SOURCE_BROWSER = YES

# Set input directories
INPUT = include/ src/ README.md

# Use README file as main page
USE_MDFILE_AS_MAINPAGE = README.md

# Recurse into subdirectories
RECURSIVE = YES

# Hide undocumented classes and members
HIDE_UNDOC_MEMBERS = YES
HIDE_UNDOC_CLASSES = YES

# HTML documentation
GENERATE_HTML = YES

# LaTeX documentation
GENERATE_LATEX = NO

# No verbose output
QUIET = YES

